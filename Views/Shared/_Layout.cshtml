    <script>
        document.addEventListener("DOMContentLoaded", function () {

            // Delegated listener for ALL password toggle icons
            document.addEventListener("click", function (e) {
                if (!e.target.classList.contains("toggle-eye")) return;

                const wrapper = e.target.closest(".password-wrapper");
                if (!wrapper) return;

                const input = wrapper.querySelector("input");
                if (!input) return;

                if (input.type === "password") {
                    input.type = "text";
                    e.target.classList.remove("fa-eye");
                    e.target.classList.add("fa-eye-slash");
                    e.target.setAttribute("aria-label", "Hide password");
                } else {
                    input.type = "password";
                    e.target.classList.remove("fa-eye-slash");
                    e.target.classList.add("fa-eye");
                    e.target.setAttribute("aria-label", "Show password");
                }
            });

            // Confirm password validation for SignUp
            const passwordField = document.querySelector("#signupPassword");
            const confirmField = document.querySelector("#signupConfirmPassword");
            const errorMessage = document.querySelector("#signupErrorMessage");

            if (passwordField && confirmField && errorMessage) {
                confirmField.addEventListener('input', function () {
                    if (confirmField.value !== passwordField.value) {
                        confirmField.classList.add('error');
                        errorMessage.style.display = 'block';
                    } else {
                        confirmField.classList.remove('error');
                        errorMessage.style.display = 'none';
                    }
                });
            }
        });






