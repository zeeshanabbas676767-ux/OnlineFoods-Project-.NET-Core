<div class="modal fade" id="LoginModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-md">
        <div class="modal-content" style="width:700px;">

            <div class="modal-header border-0 pb-0">
                <h2 class="modal-title w-100 text-center" style="font-weight:700">Log In</h2>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body p-4">

                @if (TempData["LoginError"] != null)
                {
                    <span style="color:red;"> @TempData["LoginError"]</span>
                }

                <form action="/Home/Login" method="post">
                    @Html.AntiForgeryToken()

                    <div class="row g-3">
                        <div class="form-group col-md-6">
                            <input type="text" name="Admin_Email" class="form-control" placeholder="Email Address" required />
                        </div>

                        <div class="form-group col-md-6">
                            <div class="password-wrapper">
                                <input type="password" name="password" class="form-control" placeholder="Password" required />
                                <i class="fa-solid fa-eye toggle-eye" role="button" aria-label="Show password"></i>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2 mt-4 col-md-6 mx-auto">
                        <button type="submit" class="btn btn-primary">Login</button>
                    </div>
                </form>

                <div class="text-center mt-3">
                    <p>
                        Don't have an account?
                        <a href="#" data-bs-toggle="modal" data-bs-target="#signUpModal" style="color:dodgerblue">SignUp</a>
                    </p>
                </div>

            </div>
        </div>
    </div>
</div>
