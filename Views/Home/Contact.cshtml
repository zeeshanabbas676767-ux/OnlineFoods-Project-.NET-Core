<script>
    $('#contactForm').on('submit', function (e) {
        let isValid = true;
        $('#contactForm input, #contactForm textarea').each(function () {
            const $field = $(this);
            if (!$field.val().trim()) {
                $field.addClass('is-invalid');
                isValid = false;
            } else {
                $field.removeClass('is-invalid');
            }
        });
    });

</script>


