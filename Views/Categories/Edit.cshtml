@model NewCoreProject.Models.Category

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container-fluid" style="overflow:auto;">

    <h1 style="text-align:center">Category</h1>
<hr />
<div class="row">
    <div class="col-md-9">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Category_Id" />
                <div class="row g-5" style="display:flex">
                    <div class="col-md-4">
                        <div class="form-group">
                            <h6 class="control-label">Category Name</h6>
                            <input asp-for="Category_Name" class="form-control" />
                            <span asp-validation-for="Category_Name" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group mt-4">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <button asp-action="Index" class="btn btn-secondary">Back</button>
                </div>
        </form>
    </div>
</div>

</div>

