@model IEnumerable<NewCoreProject.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    th {
        white-space: nowrap;
    }

</style>

<h1 class="user-name" style="text-align:center">Products</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<div class="table-responsive" style="overflow:auto;max-height:400px;max-width:910px">
    <table class="table table-hover">
        <thead class="table-dark">
            <tr>
                <th>
                    Product Name
                </th>
                <th style="max-width: 225px;">
                  Description
                </th>
                <th>
                    Purchase Price
                </th>
                <th>
                 Sale Price
                </th>
                <th>
                    Picture
                </th>
             @*    <th>
                    @Html.DisplayNameFor(model => model.Category)
                </th> *@
                <th style="min-width: 130px;">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product_Name)
                    </td>
                    <td style="max-width: 225px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                        @Html.DisplayFor(modelItem => item.Product_Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product_PurchasePrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product_SalePrice)
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.Product_Picture))
                        {
                            <img src="@Url.Content(item.Product_Picture)" style="width: 50px; height: 50px; object-fit: cover; border-radius: 5px;" alt="Product Image" />
                        }
                        else
                        {
                            <span>No Image</span>
                        }
                    </td>
             @*        <td>
                        @Html.DisplayFor(modelItem => item.Category.Category_Name)
                    </td> *@
                    <td class="d-flex gap-1">
                        <a asp-action="Edit" asp-route-id="@item.Product_Id" class="btn btn-sm btn-success" title="Edit"><i class="fa fa-edit"></i></a>
                        <a asp-action="Details" asp-route-id="@item.Product_Id" class="btn btn-sm btn-info" title="Details"><i class="fa fa-file-alt"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.Product_Id" class="btn btn-sm btn-danger" title="Delete"><i class="fa fa-trash-alt"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>